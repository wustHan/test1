<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="45dp"
            android:background="@color/textchecked"
            android:orientation="horizontal">


            <ImageView
                android:id="@+id/sort_todo"

                android:layout_width="40dp"
                android:layout_height="34dp"
                android:layout_gravity="center"
                android:src="@drawable/paixu5" />

            <TextView
                android:id="@+id/textView19"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="8dp"
                android:layout_weight="1"
                android:gravity="center"
                android:text="待办事项"
                android:textColor="@color/bottomcolor"
                android:textSize="20sp" />

            <ImageView
                android:id="@+id/clear_todo"
                android:layout_width="40dp"
                android:layout_height="34dp"
                android:layout_gravity="center"
                android:layout_marginRight="1dp"
                android:src="@drawable/clear_to_do" />

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@color/bgColor"
            android:orientation="vertical">

            <ListView
                android:id="@+id/lv_todothings"
                android:layout_width="match_parent"
                android:layout_height="match_parent" />
        </LinearLayout>

    </LinearLayout>
</androidx.constraintlayout.widget.ConstraintLayout>